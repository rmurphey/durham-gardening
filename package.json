{
  "name": "climate-garden-sim",
  "version": "1.0.0",
  "private": true,
  "dependencies": {
    "@vercel/blob": "^1.1.1",
    "@vercel/kv": "^3.0.0",
    "better-sqlite3": "^12.1.0",
    "jstat": "^1.9.6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.30.1",
    "react-scripts": "5.0.1",
    "recharts": "^2.15.4",
    "simple-statistics": "^7.8.8",
    "sql.js": "^1.13.0"
  },
  "scripts": {
    "// Development Commands": "======================================",
    "start": "FAST_REFRESH=true craco start",
    "dev": "npm run dev:react",
    "dev:vercel": "vercel dev",
    "dev:react": "nodemon --exec 'FAST_REFRESH=true craco start' --watch src --watch public --ext js,jsx,ts,tsx,css,html",
    "dev:quiet": "ESLINT_NO_DEV_ERRORS=true FAST_REFRESH=true nodemon --exec 'craco start' --watch src --watch public --ext js,jsx,ts,tsx,css,html --ignore 'src/**/*.test.js'",
    "dev:bg": "nohup npm run dev > /tmp/dev-server.log 2>&1 &",
    
    "// Build & Test Commands": "===================================",
    "build": "craco build",
    "test": "craco test",
    "test:db": "jest scripts/__tests__/database-manager.test.js",
    "test:interfaces": "npm test -- --testPathPattern='interface-validation' --watchAll=false",
    "eject": "react-scripts eject",
    
    "// Code Quality Commands": "=================================",
    "lint": "eslint src --ext .js,.jsx",
    "lint:fix": "eslint src --ext .js,.jsx --fix",
    "lint:changed": "git diff --name-only --cached | grep '\\.jsx\\?$' | xargs eslint",
    "lint:changed:fix": "git diff --name-only --cached | grep '\\.jsx\\?$' | xargs eslint --fix",
    
    "// Database Commands": "======================================",
    "db:build": "node scripts/database.js build",
    "db:test": "node scripts/database.js test",
    "db:verify": "node scripts/database.js verify",
    "db:update": "node scripts/database.js update",
    "db:status": "node scripts/database.js status",
    
    "// Quality Checks": "========================================",
    "check:syntax": "node scripts/quick-syntax-check.js",
    "check:react": "node scripts/react-compilation-check.js",
    "check:compilation": "node scripts/check-compilation.js",
    "precommit": "npm run check:react && npm run test:interfaces && npm run db:verify",
    
    "// Deployment Commands": "===================================",
    "vercel": "vercel",
    "vercel:dev": "vercel dev",
    "vercel:build": "npm run db:build && npm run build",
    "deploy": "npm run vercel:build && vercel --prod"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@craco/craco": "^7.1.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "buffer": "^6.0.3",
    "copy-webpack-plugin": "^13.0.0",
    "crypto-browserify": "^3.12.1",
    "msw": "^2.10.2",
    "nodemon": "^3.1.10",
    "path-browserify": "^1.0.1",
    "puppeteer": "^24.10.2",
    "sqlite3": "^5.1.7",
    "stream-browserify": "^3.0.0",
    "util": "^0.12.5",
    "vm-browserify": "^1.1.2"
  }
}
